{
  "name": "booky",
  "version": "1.0.0",
  "license": "UNLICENSED",
  "scripts": {
    "dev:client": "cd client && npm run dev",
    "dev:server": "cd server && npm run dev",
    "dev": "run-p dev:*",
    "build:client": "cd client && npm run build",
    "build:server": "cd server && npm run build",
    "build": "run-p build:*",
    "format": "biome format --write --skip-parse-errors",
    "check": "biome check --write ./client",
    "start": "node ./server/dist/main"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.3",
    "npm-run-all": "^4.1.5"
  }
}
